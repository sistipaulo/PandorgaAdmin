@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="images/ico.png" />
    <!-- Link Font Awesome (ícones)  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <!-- Link CSS  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <!-- CDN Slick  -->
</head>

<body>
    <form id="account" method="post" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal text-light text-center">Login</h1>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div data-mdb-input-init class="form-outline mb-1">
            <input asp-for="Input.Email" placeholder="Email" type="email" class="form-control" autocomplete="username" aria-required="true" />
            <label class="sr-only"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div data-mdb-input-init class="form-outline mb-1">
            <input asp-for="Input.Password" placeholder="Senha" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label class="sr-only"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3 text-light">
            <label asp-for="Input.RememberMe" class="form-check-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-block">Entrar</button>
         <div>
            <button  class="btn btn-outline-light mt-2 btn-block" asp-page="./ForgotPassword">Esqueci minha Senha</button>
            <button  class="btn btn-outline-light mt-2 btn-block" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar Novo Usuário</button>
        </div>
    </form>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
