@model Pandorga_Admin.Models.Professor

@{
    ViewData["Title"] = "Editar";
}

<div id="overlay"></div>

<div id="loader" class="spinner-border text-primary" role="status" style="display: none;">
</div>

<h1>Editar</h1>

<h4>Funcionário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control phone-input" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especializacao" class="control-label"></label>
                <select asp-for="Especializacao" class="form-control" asp-items="Html.GetEnumSelectList<Professor.CargoEnum>()"></select>
                <span asp-validation-for="Especializacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Salvar" class="btn btn-primary mt-3">
                    <i class="bi bi-save"></i>
                </button>
                <a class="btn btn-secondary mt-3" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Voltar" asp-action="Index"><i class="bi bi-arrow-counterclockwise"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $(".phone-input").inputmask("(99)99999-9999");
        });
    </script>
}
