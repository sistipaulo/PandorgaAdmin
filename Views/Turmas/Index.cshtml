@model IEnumerable<Pandorga_Admin.Models.Turma>

@{
    ViewData["Title"] = "Turmas";
}

<div id="overlay"></div>

<div id="loader" class="spinner-border text-primary" role="status" style="display: none;">
</div>

<h1 class="title-top">Listagem de Turmas</h1>

<button type="button" class="btn btn-primary">
    <a class="create-btn" asp-action="Create">Nova Turma</a>
</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTurma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.NomeTurma)
            </td>
                <td class ="align-middle">
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Turno)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Professor.Nome)
            </td>
                <td>
                    <a class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Editar" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i></a> 
                    <a class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Detalhes" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-info-circle"></i></a> 
                    <a class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Excluir" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash-fill"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
